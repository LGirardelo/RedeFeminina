<%- model_class = Escolaridade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descricao_escolaridade) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @escolaridades.each do |escolaridade| %>
      <tr>
        <td><%= link_to escolaridade.id, escolaridade_path(escolaridade) %></td>
        <td><%= escolaridade.descricao_escolaridade %></td>
        <td><%=l escolaridade.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      escolaridade_path(escolaridade), :class => 'btn btn-default fa fa-sticky-note-o' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_escolaridade_path(escolaridade), :class => 'btn btn-default fa fa-pencil-square-o' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      escolaridade_path(escolaridade),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-default fa fa-trash-o' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_escolaridade_path,
            :class => 'btn btn-default fa fa-plus' %>
