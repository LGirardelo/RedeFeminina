<%= form_for @escolaridade, :html => { :class => "form-horizontal escolaridade" } do |f| %>

  <% if @escolaridade.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@escolaridade.errors.count, "error") %> prohibited this escolaridade from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @escolaridade.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :descricao_escolaridade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :descricao_escolaridade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:descricao_escolaridade) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                escolaridades_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
