<%- model_class = Escolaridade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:descricao_escolaridade) %>:</strong></dt>
  <dd><%= @escolaridade.descricao_escolaridade %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              escolaridades_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_escolaridade_path(@escolaridade), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              escolaridade_path(@escolaridade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
